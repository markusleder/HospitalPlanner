@using HospitalPlanner.Shared
@page "/shiftplan"
@inject HttpClient Http

<h1>Hospital Shift Plan</h1>

@if (_plan == null)
{
<h3>loading ...</h3>
}
else
{
    <HtmlGrid/>
}

@functions
{
    Plan[] _plan;

    protected override async Task OnInitAsync()
    {
        _plan = await Http.GetJsonAsync<Plan[]>("api/ShiftPlan/Get");
    }

}
